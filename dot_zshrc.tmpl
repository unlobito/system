#######################################
## General macOS shell configuration ##
#######################################

# friday.sh
if [[ -r $HOME/bin/friday.sh ]]; then
  ($HOME/bin/friday.sh)
fi

# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

# zsh configuration

## Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh"
DISABLE_AUTO_UPDATE="true"

## Theme configuration
ZSH_THEME="powerlevel10k/powerlevel10k"

## zsh options
HIST_STAMPS="yyyy-mm-dd"

## Plugin configuration
plugins=(
  asdf
  git
  op
)

source $ZSH/oh-my-zsh.sh

# Homebrew
CPU=$(uname -p)
if [[ "$CPU" == "arm" ]]; then
  eval "$(/opt/homebrew/bin/brew shellenv)"
  export CPATH=/opt/homebrew/include:$CPATH
  export LIBRARY_PATH=/opt/homebrew/lib:$LIBRARY_PATH
else
  eval "$(/usr/local/bin/brew shellenv)"
fi
export HOMEBREW_GITHUB_API_TOKEN={{ (onepasswordDetailsFields "4hkfgrtj2vgvdlcwxbhwsl2uva" "i46hhi3cfdiirxiafymypej6gu" "awooo.1password.com").password.value }}

# Binary search path setup
export PATH=$HOME/bin:$PATH
export GOPATH=$HOME/bin/go

export MAKEOPTS="-j"
export EDITOR="nano"

alias ls="ls -G"
alias nh='unset HISTFILE'
alias beep='osascript -e "beep 1"'

alias qr="qrcode-terminal"

# rbenv/pyenv init
eval "$(rbenv init -)"

## Add pyenv executable to PATH and
## Load pyenv into the shell:
export PYENV_ROOT="$HOME/.pyenv"
command -v pyenv >/dev/null || export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)"
eval "$(pyenv virtualenv-init -)"

{{- if eq .org "skyscanner" }}
# asdf java
. ~/.asdf/plugins/java/set-java-home.zsh
{{- end }}

# Import environment-specific configuration based on chezmoi org
localconfig="$HOME/.config/zsh/config-{{- .org }}"

if test -e "$localconfig.zsh"; then
    source "$localconfig.zsh"
fi

# Disable husky
## https://typicode.github.io/husky/#/?id=bypass-hooks
## husky pre-commit/push hooks cause IDE sadness with little immediate feedback
export HUSKY=0

# ansible credstash bug
export no_proxy='*'

# powerlevel10k configuration
[[ ! -f {{ .chezmoi.sourceDir }}/.p10k.zsh ]] || source {{ .chezmoi.sourceDir }}/.p10k.zsh
